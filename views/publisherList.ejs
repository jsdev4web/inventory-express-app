<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>  
  
  <h3>Publishers List</h3>
  <ul>
    <% if (locals.publishers) {%>
      <% publishers.forEach(publisher => { %>
        <br><ul>
            <li>Publisher ID: <%= publisher.publisher_id %></li>
            <li>Publisher Name: <%= publisher.publisher_name %></li>

          <li>
            ID: <%= publisher.id %>, Publisher ID: <%= publisher.publisher_id %>, Publisher Name <%= publisher.publisher_name %>
            <a href="/<%= publisher.id %>/publisher-update">Update</a>
          </li>
            
            <li>
            <form action="/<%= publisher.id %>/publisher-delete" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
            </form>
          </li>
      </ul>
      <% }); %>
    <% } %>
  </ul>
  <a href="/publisher">Add a publisher</a><br>
  <a href="/">Home</a>
 

</body>
</html>
