<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  
  <h3>Reviews List</h3>
  <ul>
    <% if (locals.reviews) {%>
      <% reviews.forEach(review => { %>
        <br><ul>
            <li>Game ID: <%= review.game_id %></li>
            <li>Rating: <%= review.rating %></li>
            <li>
              ID: <%= review.id %>, Review Rating: <%= review.rating %>, Game ID <%= review.game_id %>
              <a href="/<%= review.id %>/review-update">Update</a>
            </li>
              
              <li>
              <form action="/<%= review.id %>/review-delete" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
              </form>
            </li>
        </ul>
      <% }); %>
    <% } %>
  </ul>
  <a href="/review">Add a review</a><br>
  <a href="/">Home</a>
  

  
</body>
</html>
