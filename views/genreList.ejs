<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>  
  
  <h3>Genres List</h3>
  <ul>
    <% if (locals.genres) {%>
      <% genres.forEach(genre => { %>
        <br><ul>
            <li>Genre ID: <%= genre.genres_id %></li>
            <li>Genre Name: <%= genre.genres_name %></li>

            <li>
              ID: <%= genre.id %>, Genre ID: <%= genre.genres_id %>, Genre Name <%= genre.genres_name %>
              <a href="/<%= genre.id %>/genre-update">Update</a>
            </li>
              
              <li>
              <form action="/<%= genre.id %>/genre-delete" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
              </form>
            </li>

        </ul>
      <% }); %>
    <% } %>
  </ul>
  <a href="/genre">Add a genre</a><br>
  <a href="/">Home</a>


  
</body>
</html>
